<odoo>
    <data> 
        <!-- Form view of card to card transfer wizard -->
        <record id="card_to_card_transfer_wizard_form" model="ir.ui.view">
            <field name="name">card to card transfer wizard Form</field>
            <field name="model">card.to.card.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="card to card transfer wizard" >
                    <sheet string="card to card transfer wizard">
                        <group string="card to card transfer wizard" colspan="2" col="4">
                            <field name="from_card_id" />
                            <field name="to_card_id" />
                            <field name="ipn" />
                            <field name="amount"/>
                        </group>
                        <footer>
                            <button name="transfer" string="Submit" type="object" class="oe_highlight"/>
                                or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


