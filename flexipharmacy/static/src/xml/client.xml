    <t t-name="DoctorLine">
        <tr class='doctor-line' t-att-data-id='doctor.id'>
            <td><t t-esc='doctor.name' /></td>
            <td><t t-esc='doctor.address or ""' /></td>
            <td><t t-esc='doctor.phone or doctor.mobile or ""' /></td>
        </tr>
    </t>

